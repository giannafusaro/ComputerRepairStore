
  <div class="form-group">
    <%= f.label :customer_id %>
    <%= text_field_tag :discard, current_user.name, class: 'form-control', disabled: true %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :requested_for %>
    <div id="datetimepicker" class="input-group input-append date">
      <%= f.text_field :requested_for, value: datetime_format(@repair.requested_for), class: 'form-control js-timestamp' %>
      <span class="input-group-addon add-on">
        <i class="glyphicon glyphicon-calendar"></i>
      </span>
    </div>
  </div>
