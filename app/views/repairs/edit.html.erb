<div class="container content-container">
  <h1>Edit Repair</h1>

  <%= form_for @repair do |f| %>
    <%= (render '/layouts/errors', klass: @repair) if @repair %>

    <%= render partial: 'form', locals: { f: f } %>

    <%= f.submit 'Update Repair', class: 'btn btn-primary' %>
  <% end %>
  <br />
  <%= link_to repair_path(@repair.id), method: :delete, 'data-confirm'=>'Are you sure?', class: "btn btn-danger" do %>
    <span class="glyphicon glyphicon-trash"></span> Delete
  <% end %>
</div>
