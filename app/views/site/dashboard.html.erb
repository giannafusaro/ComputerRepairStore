<div class="container" id="dashboard-container">
  <h1>Dashboard</h1>
  <div class="row">
    <div class="col-md-6">
      <h3> Repair Request</h3>
      <%= form_for :repair, url: repairs_path, method: :post do |f|%>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_field :description, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :requested_for %>
          <div id="datetimepicker" class="input-group input-append date">
            <%= f.text_field :requested_for, class: 'form-control js-timestamp' %>
            <span class="input-group-addon add-on">
              <i class="glyphicon glyphicon-calendar"></i>
            </span>
          </div>
        </div>
        <%= f.submit 'Submit', class: 'btn btn-info' %>
      <% end %>
    </div>
    <div class="col-md-6">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Requested For</th>
          </tr>
        </thead>
        <% current_user.repairs.each do |repair| %>
          <tr>
            <td><%= repair.customer.name %></td>
            <td><%= repair.description %></td>
            <td><%= repair.requested_for %></td>
            <td>
                <%= link_to raw("<span class=\"glyphicon glyphicon-eye-open\"></span> View"), repair_path(repair.id),
                class: "btn btn-default" %>

                <%= link_to raw("<span class=\"glyphicon glyphicon-trash\"></span> Delete"), repair_path(repair.id),
                method: :delete, 'data-confirm'=>'Are you sure?', class: "btn btn-default" %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
